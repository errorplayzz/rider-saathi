# Enhanced Rider Tracking System - Backend Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration (Optional - uses in-memory storage if not provided)
# MONGODB_URI=mongodb://localhost:27017/rider-sathi

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Emergency System
EMERGENCY_BROADCAST_RADIUS=10000
RIDER_TRACKING_RADIUS=5000
INACTIVE_RIDER_THRESHOLD=300000

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Security (Optional)
# JWT_SECRET=your-super-secret-jwt-key-here
# SESSION_SECRET=your-session-secret-here