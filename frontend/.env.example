# ============================================
# Enhanced Rider Tracking System Configuration
# ============================================

# Backend API Configuration for Enhanced Map Features
REACT_APP_API_URL=http://localhost:5000
REACT_APP_WEBSOCKET_URL=http://localhost:5000

# Map Configuration
REACT_APP_DEFAULT_MAP_CENTER_LAT=28.6139
REACT_APP_DEFAULT_MAP_CENTER_LNG=77.2090
REACT_APP_DEFAULT_MAP_ZOOM=10

# Real-time Features
REACT_APP_LOCATION_UPDATE_INTERVAL=5000
REACT_APP_RIDER_TRACKING_RADIUS=5000
REACT_APP_EMERGENCY_BROADCAST_RADIUS=10000

# Navigation & Routing APIs (Free Open Source)
REACT_APP_OSRM_SERVER=https://router.project-osrm.org
REACT_APP_NOMINATIM_SERVER=https://nominatim.openstreetmap.org
REACT_APP_OVERPASS_SERVER=https://overpass-api.de

# ============================================
# Supabase Configuration (For User Authentication)
# ============================================
# Get these values from your Supabase project settings â†’ API
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Application Environment
VITE_APP_ENV=development

# UI Configuration
REACT_APP_ENABLE_DEBUG_LOGS=true
REACT_APP_SHOW_COORDINATES=true
REACT_APP_DEFAULT_THEME=light

# Performance
REACT_APP_MAP_MAX_MARKERS=100
REACT_APP_SEARCH_DEBOUNCE_MS=300

# App Information
REACT_APP_NAME=Rider Sathi
REACT_APP_VERSION=2.0.0

# Optional: Analytics or other third-party services
# VITE_GOOGLE_ANALYTICS_ID=
# VITE_SENTRY_DSN=

